<% if signed_in? %>
  <table class="front">
    <tr>
      <td class="main">
        <h2 class="micropost">Create a note</h2>
        <%= render 'pages/micropost_form' %>
		<%= render 'pages/feed' %>
      </td>
      <td class="sidebar round">
        <%= render 'pages/user_info' %>
        <%= render 'pages/stats' %>
      </td>
    </tr>
  </table>
<% else %>

	<h1>Scribelix Home</h1>
    <p>
      This is the home page for the
      <a href="#">Scribelix</a>
      rails application.
    </p>
	
	<%= link_to "Sign up now!", signup_path, :class => "signup_button round" %>
<% end %>